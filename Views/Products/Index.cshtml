@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Store</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
               Price
            </th>
            <th>
                StockQty
            </th>
            <th>
               CreatedAt
            </th>
            <th>
                UpdatedAt
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.StockQty
            </td>
            <td>
                @item.CreatedAt
            </td>
            <td>
                @item.UpdatedAt
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
